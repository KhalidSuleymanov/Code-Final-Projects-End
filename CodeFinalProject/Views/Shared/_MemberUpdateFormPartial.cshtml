@model MemberUpdateViewModel

<form action="memberupdate" method="post">
    <div class="row">
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="FullName" placeholder="Full name" />
        <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="UserName" placeholder="User name" />
        <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="Email" placeholder="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="Phone" placeholder="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>
    <br />
    <legend class="mt-4">Password Change</legend>
    <hr />
    <div class="row">
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="CurrentPassword" placeholder="Current password" />
        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="NewPassword" placeholder="New password" />
        <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <input asp-for="ConfirmPassword" placeholder="Confirm password" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="single-input-item col-lg-8 mt-3">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="single-input-item">
        <button type="submit" class="check-btn sqr-btn">Save Changes</button>
        </div>
    </div>
</form>
