@model List<Staff>

<main class="our-staff">
    <section class="staff-title">
        <div class="container-fluid">
            <div class="row ms-0 me-0">
                <div>
                    <h1>Our Staff</h1>
                    <h5><a asp-controller="home" asp-action="index">Home</a> / Our Staff</h5>
                </div>
            </div>
        </div>
    </section>
    <section class="staff-cards">
        <div class="container">
            <div class="row g-4 mb-5">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3">
                        <div class="staff-card">
                            <img src="~/Manage/Assets/Uploads/StaffImage/@item.Image" alt="">
                            <span class="position">@item.Position</span>
                            <div class="aves-text">
                                <h5>@item.Name</h5>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</main>