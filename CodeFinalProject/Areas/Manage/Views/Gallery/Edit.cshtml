@model Gallery

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h4 class="mt-4"> Gallery Edit </h4>
        </div>
        <div class="col-md-12">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ModalClick">Modal Click</label>
                    <input asp-for="ModalClick" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ModalClick"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ModalNumber">Modal Number</label>
                    <input asp-for="ModalNumber" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ModalNumber"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ImageFile">File</label>
                    <input asp-for="ImageFile" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ImageFile"></span>
                    <img width="80" height="80" src="~/Manage/Assets/Uploads/GalleryImage/@Model.Image" />
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>

