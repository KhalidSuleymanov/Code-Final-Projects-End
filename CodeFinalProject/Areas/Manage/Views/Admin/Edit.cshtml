@model EditAdminViewModel
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h4 class="mt-3"> Admin Edit </h4>
        </div>
        <div class="col-md-10">
            <form method="post" asp-action="edit" asp-controller="admin">
                <div class="form-group">
                    <label class="mt-3" asp-for="FullName">FullName</label>
                    <input asp-for="FullName" class="form-control mt-2" style="border: 1px solid #fff;" placeholder="FullName">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="UserName">UserName</label>
                    <input asp-for="UserName" class="form-control mt-2" style="border: 1px solid #fff;" placeholder="UserName">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label class ="mt-3" asp-for="Role">Role</label>
                    <input asp-for="Role" class="form-control mt-2" style="border: 1px solid #fff;" placeholder="Role">
                    <span asp-validation-for="Role"></span>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>