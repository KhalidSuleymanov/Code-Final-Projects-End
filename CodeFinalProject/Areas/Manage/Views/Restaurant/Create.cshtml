@model Restaurant
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h4 class="mt-4"> Restaurant Create </h4>
        </div>
        <div class="col-md-12">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description1">Description 1</label>
                    <input asp-for="Description1" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Description1"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description2">Description 2</label>
                    <input asp-for="Description2" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Description2"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description3">Description 3</label>
                    <input asp-for="Description3" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Description3"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>

