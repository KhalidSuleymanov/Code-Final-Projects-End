@model Feature

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h1 class="mt-4"> Feature Edit </h1>
        </div>
        <div class="col-md-12">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <label class="mt-2" asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="mt-2" asp-for="IconImage">Icon Image</label>
                    <input asp-for="IconImage" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="IconImage"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="mt-2" asp-for="FeatureCount">Feature Count</label>
                    <input asp-for="FeatureCount" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="FeatureCount"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>



