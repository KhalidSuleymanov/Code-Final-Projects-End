@model Slider
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h4 class="mt-4">Slider Create</h4>
        </div>
        <div class="col-md-12">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <label asp-for="FirstTitle">First Title</label>
                    <input asp-for="FirstTitle" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="FirstTitle"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="SecondTitle">Second Title</label>
                    <input asp-for="SecondTitle" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="SecondTitle"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ButtonText">Button Text</label>
                    <input asp-for="ButtonText" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ButtonText"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ButtonUrl">Button Url</label>
                    <input asp-for="ButtonUrl" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ButtonUrl"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="ImageFile">File</label>
                    <input onchange="readURL(this);" asp-for="ImageFile" class="form-control mt-2" style="border:1px solid #fff;">
                    <span asp-validation-for="ImageFile"></span>
                    <img width="100" height="100" id="blah" src="http://placehold.it/180" alt="your image" />
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>



