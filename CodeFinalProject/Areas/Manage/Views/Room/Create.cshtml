@model Room
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <h4 class="mt-3"> Room Create </h4>
        </div>
        <div class="col-md-12">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="mt-3" asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="BtnText">BtnText</label>
                    <input asp-for="BtnText" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="BtnUrl">BtnUrl</label>
                    <input asp-for="BtnUrl" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="ChildCount">ChildCount</label>
                    <input asp-for="ChildCount" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="ChildCount"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="ElderCount">ElderCount</label>
                    <input asp-for="ElderCount" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="ElderCount"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="RoomNumber">RoomNumber</label>
                    <input asp-for="RoomNumber" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="RoomNumber"></span>
                </div>
                <div class="form-group">
                    <label class="mt-3" asp-for="ImageFile">Image</label>
                    <input onchange="readURL(this);" asp-for="ImageFile" class="form-control mt-2" style=" border:1px solid #fff;">
                    <span asp-validation-for="ImageFile"></span>
                    <img width="100" height="100" id="blah" src="http://placehold.it/180" alt="your image" />
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>

